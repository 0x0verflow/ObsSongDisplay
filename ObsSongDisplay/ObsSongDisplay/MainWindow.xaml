        <TextBox x:Name="intervalBox" HorizontalAlignment="Left" Height="23" Margin="139,254,0,0" TextWrapping="Wrap" Text="5000" VerticalAlignment="Top" Width="165"/>
        <Label x:Name="label2_Copy" Content="Check interval (ms):" HorizontalAlignment="Left" Margin="21,253,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Donate (CS:GO Skins)" HorizontalAlignment="Left" Margin="144,418,0,0" VerticalAlignment="Top" Width="160" Click="Button_Click"/>
        <CheckBox x:Name="checkBox" Content="Dark Mode" HorizontalAlignment="Left" Margin="25,373,0,0" VerticalAlignment="Top" Width="87" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Height="25"/>

    </Grid>
</Controls:MetroWindow>
